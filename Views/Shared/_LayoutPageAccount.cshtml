<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/swiper-bundle.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/custom-font.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/video-js.css" rel="stylesheet" />
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/swiper-bundle.js"></script>
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    <script src="~/Scripts/video.js"></script>
    <link rel="icon" type="image/x-icon" href="~/Images/Global-Images/nike-favicon.png" />
    <title>@ViewBag.Title</title>
    
    <style>
        .h4 {
            font-family: TradeGothicLTCondEighteen !important;
        }

        .field-validation-error {
            color: red !important;
        }

        .validation-summary-errors {
            color: red !important;
        }

        .validation-summary-errors > ul {
            list-style-type:none !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light p-0" style="background-color: rgb(229, 229, 229)">
        <div class="container-fluid">
            <a class="navbar-brand" href="/nike/index">
                <img src="~/Images/Global-Images/nike.png" width="24" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link mx-2 active" aria-current="page" href="#" style="font-family: FuturaLightfont !important">Help</a>
                    </li>
                    <li class="nav-item pt-2 d-none d-lg-inline-flex" style="font-family: FuturaLightfont !important">|</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link mx-2 active" role="button" href="#" id="dropdownMenuAccount" style="font-family: FuturaLightfont !important" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="text-truncate">Hi, @User.Identity.Name</span>
                                <i class="fa fa-user-o" aria-hidden="true"></i>
                            </a>
                            <ul class="dropdown-menu account-menu" aria-labelledby="dropdownMenuAccount">
                                <li><a class="dropdown-item" href="/account/myprofile">Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/account/cart">Cart</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/account/signout">Sign Out</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link mx-2 active" href="/account/signin" style="font-family: FuturaLightfont !important">Login</a>
                        </li>
                        <li class="nav-item pt-2" style="font-family: FuturaLightfont !important">|</li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 active" href="/account/signup" style="font-family: FuturaLightfont !important">Sign Up</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-column">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <span class="footer-title">Product</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Men</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Women</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Kids</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 footer-column">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <span class="footer-title">About Nike</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Become A Member</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sign Up For Email</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">News</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 footer-column">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <span class="footer-title">Contact & Support</span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link"><i class="fa fa-phone" aria-hidden="true"></i> +84 28 11 20 17</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-envelope" aria-hidden="true"></i> Contact us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-comments" aria-hidden="true"></i> Give feedback</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="text-center"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></div>

            <div class="row text-center">
                <div class="col-md-4 box">
                    <span class="copyright quick-links">
                        Copyright &copy; Dang Vu Gia Huy - 2001207179 (HUFI)
                    </span>
                </div>
                <div class="col-md-4 box">
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                            <a class="rounded-circle" href="#">
                                <i class="fa fa-twitter-square" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="rounded-circle" href="#">
                                <i class="fa fa-facebook-square" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="rounded-circle" href="#">
                                <i class="fa fa-youtube-square" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="rounded-circle" href="#">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 box">
                    <ul class="list-inline quick-links">
                        <li class="list-inline-item">
                            <a href="#">Privacy Policy</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">Terms of Use</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
