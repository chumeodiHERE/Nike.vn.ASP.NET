<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/custom-font.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    <link rel="icon" type="image/x-icon" href="~/Images/Global-Images/nike-favicon.png" />
    <title>@ViewBag.Title</title>
    <style>
        .h2 {
            font-family: futura !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/Images/Global-Images/nike.png" height="24">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/statistics/userlist">User List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/statistics/orderlist">Order List</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link active" role="button" href="#" id="dropdownMenuAccount" style="font-family: FuturaLightfont !important" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="text-truncate">Welcome back, @User.Identity.Name</span>
                                <i class="fa fa-user-o" aria-hidden="true"></i>
                            </a>
                            <ul class="dropdown-menu account-menu" aria-labelledby="dropdownMenuAccount">
                                <li><a class="dropdown-item" href="/account/signout">Sign Out</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
